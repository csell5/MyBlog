@import 'nib'

html
	height 100%
	width 100%
	display block

body
	height 100%
	width 100%
	line-height 32.5px
	font-size 18px
	font-weight 100

#bodyWrapper
	min-height 100%
	position relative

#pageHeader
	padding-top 30px
	height 25em
	background url('/images/foo.jpg') no-repeat center
	background-attachment fixed
	color white

.resizeIcon
	font-size 72px

.jumbotron, .navbar
	background none

.hero-unit
	padding-top 25px
	padding-bottom 50px

.hero-unit 
	h1
		padding-bottom 10px

.hero-unit 
	p
		padding-bottom 10px

.nav
	margin-left 30px
	margin-right 30px
	text-transform uppercase

.navbar-default 
	.navbar-brand
		font-weight bold
		font-size xx-large

#contentBody
	margin-top 50px	
	padding-bottom 50px
	
.post .date
	margin-bottom 25px



.articleList
	margin-bottom 25px
	
	article
		margin-bottom 50px

	header
		margin-bottom 50px

#articleSearch
	margin-bottom 50px

// -----
// LINKS

#contentBody
	a, a:visited, a:focus
		text-decoration none
		color #000
		font-weight bold
		&:hover
			border-bottom 2px solid #e1e1e1

	header 
		a
			font-weight 200

	.imageAnchor
		a:hover
			border-bottom 0
		
	.post a, .post a:visited, .post a:focus, .page a, .page a:visited, .page a:focus 
		font-weight 200
		border-bottom 2px solid #e1e1e1
		&:hover
			border-bottom 2px solid #FF4E00	

	.post figure a
		border-bottom 0px
		&:hover
			border-bottom 0px


// ------
// IMAGES

.resizeMe
	width 60px

.tcLogoResize
	width 225px

.imgSpace
	margin-top 10px
	margin-bottom 10px

// ------
// post formatting

#post, #page
	h1
		margin-top 50px

	p, h1
		margin-bottom 25px

#disqus
	margin-top 50px

#footer
	line-height normal
	height 30px
	width 100%
	position absolute
	bottom 0
	background #FF4E00

#copyright
	margin-right 30px
	font-size 10px
	font-weight 200
	color #fff
	text-transform uppercase
	padding 5px

@import 'nib'

html
	height 100%
	width 100%
	display block

body
	height 100%
	width 100%
	line-height 32.5px
	font-size 18px
	font-weight 200

#bodyWrapper
	min-height 100%
	position relative

#pageHeader
	padding-top 30px
	height 20em
	background url('/images/foo.jpg') no-repeat center
	background-attachment fixed
	color white

.resizeIcon
	font-size 72px

.jumbotron, .navbar
	background none

.hero-unit
	padding-top 25px
	padding-bottom 50px

.hero-unit 
	h1
		padding-bottom 10px

.hero-unit 
	p
		padding-bottom 10px

.nav
	margin-left 30px
	margin-right 30px
	text-transform uppercase

.navbar-default 
	.navbar-brand
		font-weight bold
		font-size xx-large

#contentBody
	padding-bottom 50px
	
#contentBody:before
	margin-top 25px	

.page-content:before
	margin-top 25px	

.post
	margin-top 25px
	margin-bottom 25px	

.post .date
	margin-bottom 25px

.articleList
	margin-bottom 25px

.articleList 
	header
		margin-bottom 25px

.articleList 
	article
		margin-bottom 25px

// -----
// LINKS

#contentBody
	a, a:visited, a:focus
		text-decoration none
		color #000
		font-weight bold
		&:hover
			border-bottom 2px solid #e1e1e1

	header 
		a
			font-weight 200

	.imageAnchor
		a:hover
			border-bottom 0
		
	.post a, .post a:visited, .post a:focus 
		font-weight 200
		border-bottom 2px solid #e1e1e1
		&:hover
			border-bottom 2px solid #FF4E00

// ------
// IMAGES

.resizeMe
	width 60px

.tcLogoResize
	width 225px

aside
	article 
		margin-bottom 50px


// ------
// post formatting

#post
	h1
		margin-top 50px

	p, h1
		margin-bottom 25px


#footer
	line-height normal
	height 30px
	width 100%
	position absolute
	bottom 0
	background #FF4E00

#copyright
	margin-right 30px
	font-size 10px
	font-weight 100
	color white
	text-transform uppercase
	padding 5px

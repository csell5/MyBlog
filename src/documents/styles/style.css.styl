@import 'nib'

html
	height 100%
	width 100%
	display block

body
	height 100%
	width 100%
	line-height 32.5px
	font-size 18px
	font-weight 200

#pageHeader
	padding-top 30px
	top 400px
	height 50%
	background url('/images/foo.jpg') no-repeat center
	background-size cover
	background-attachment fixed
	background-position 50% 90%
	color white

.jumbotron, .navbar
	background none

.hero-unit
	padding-bottom 50px
.hero-unit h1
	padding-bottom 10px

.nav
	margin-left 30px
	margin-right 30px
	text-transform uppercase

.navbar-default .navbar-brand
	font-weight bold
	font-size xx-large

#bodyWrapper
	min-height 100%
	position relative

#contentBody
	padding-bottom 50px
	
#contentBody:before
	margin-top 25px	

.page-content:before
	margin-top 25px	

.articleList
	margin-bottom 25px

.articleList a, .articleList a:visited, .articleList a:focus
	color #FF4E00
	text-decoration none

.articleList a:hover
	color #FF4E00
	text-decoration none
	border-bottom 2px solid #e1e1e1

#pp-contentBody a, #contentBody a:visited, #contentBody a:focus 
	text-decoration none

#pp-contentBody a:hover
	text-decoration none
	border-bottom 2px solid #e1e1e1

.post a, .post a:visited, .post a:focus 
	color black
	text-decoration none
	border-bottom 2px solid #e1e1e1

.post a:hover
	color black
	text-decoration none
	border-bottom 2px solid #FF4E00

#footer
	line-height normal
	height 30px
	width 100%
	position absolute
	bottom 0
	background #FF4E00

#copyright
	margin-right 30px
	font-size 10px
	font-weight 100
	color white
	text-transform uppercase
	padding 5px

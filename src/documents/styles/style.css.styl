@import 'nib'

_orange = #FF4E00

@-webkit-viewport
	width device-width

@-moz-viewport
	width device-width

@-ms-viewport
	width device-width

@-o-viewport
	width device-width
	
@viewport
	width device-width

html
	height 100%
	width 100%
	display block

body
	height 100%
	width 100%
	line-height 32.5px
	font-size 18px
	font-weight 100

#bodyWrapper
	min-height 100%
	position relative

#siteHeader
	padding-top 30px	

	background-image url("/images/unsplash_woods_crop.jpg") no-repeat center
	background-position center center
	background-size cover
	//background-attachment fixed
	//vertical-align top

    color #fff

.resizeIcon
	font-size 72px

.navHome, .jumbotron
	font-family "Montserrat","Helvetica","Arial","sans-serif"
	//font-family "jaf-bernino-sans","Lucida Grande","Lucida Sans Unicode","Lucida Sans","Geneva","Verdana","sans-serif"
	
.jumbotron
	padding-bottom 100px

.jumbotron h1, .navHome .firstName
	font-weight 700
	font-style normal
	letter-spacing -0.04em
	font-size 50px
	line-height 1.1
	margin-bottom 8px

.navHome .firstName, .navHome .lastName
	font-size 30px
	text-transform lowercase

.navHome .lastName
	font-weight 300
	color rgba(255, 255, 255, 0.65)

.jumbotron h2
	letter-spacing -0.02em
	font-weight 300
	font-style normal
	font-size 30px
	line-height 1.1
	color rgba(255, 255, 255, 0.65)

.jumbotron, .navbar
	background none
	color #fff

.jumbotron .headerArrow
	content ''
	display block
	width 16px
	height 16px
	position relative
	bottom -100px
	left 50%
	margin-left -8px
	margin-bottom 50px
	border 2px solid rgba(255,255,255,0.35)
	background rgba(0,0,0,0)
	border-left 0
	border-top 0
	outline none
	transform rotate(45deg)
	//cursor pointer

.hero-unit
	padding-top 25px
	padding-bottom 50px

.hero-unit 
	h1
		padding-bottom 10px

.hero-unit 
	p
		padding-bottom 10px

.nav
	margin-left 30px
	margin-right 30px
	//text-transform uppercase

.navbar-default 
	.navbar-brand
		font-weight bold
		font-size xx-large

#contentBody
	margin-top 50px	
	padding-bottom 50px
	
.post .date
	margin-bottom 25px

.articleList
	margin-bottom 25px
	
	article
		margin-bottom 50px

	header
		margin-bottom 50px

#articleSearch
	margin-bottom 50px

// -----
// LINKS

#contentBody
	a, a:visited, a:focus
		text-decoration none
		color #000
		font-weight bold
		&:hover
			border-bottom 2px solid #e1e1e1

	header 
		a
			font-weight 200

	.imageAnchor
		a:hover
			border-bottom 0
		
	.post a, .post a:visited, .post a:focus, .page a, .page a:visited, .page a:focus 
		font-weight 200
		border-bottom 2px solid #e1e1e1
		&:hover
			border-bottom 2px solid #FF4E00	

	.post figure a
		border-bottom 0px
		&:hover
			border-bottom 0px


// ------
// IMAGES

.resizeMe
	width 50px

.tcLogoResize
	width 225px

.imgSpace
	margin-top 10px
	margin-bottom 10px

// ------
// post formatting

#post, #page
	h1
		margin-top 50px

	p, h1
		margin-bottom 25px

blockquote
	p
		margin-top 15px
		margin-bottom 15px

	margin-left 25px
	border-left 5px solid _orange
		

#disqus
	margin-top 50px

#footer
	line-height normal
	height 30px
	width 100%
	position absolute
	bottom 0
	background #FF4E00

#copyright
	margin-right 30px
	font-size 10px
	font-weight 200
	color #fff
	text-transform uppercase
	padding 5px
